#!/usr/bin/env plash.runfile

--os
alpine3.6

--apk
python3
python3-setuptools
squashfs-tools
tree
wget

--layer

--exec
/usr/local/bin/plash

--layer
--bust-cache

--import-envs
PWD:HOST_PWD

--run
cd $HOST_PWD

# install runp
wget 'https://github.com/ihucos/runp/blob/master/runp?raw=true' -O /usr/local/bin/runp
chmod 4755 /usr/local/bin/runp

python3 setup.py install

