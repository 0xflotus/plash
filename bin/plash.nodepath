#!/bin/sh
[ $# -lt 1 ] && {
#       # keep error message generic because its reused on scripts calling this
      echo 'missing argument: container' >&2
      exit 1
}
readlink --canonicalize-existing /var/lib/plash/links/$1 || {
      echo "no such container: $1" >&2 # TODO: add the same colros as in the python script
      exit 2
}
