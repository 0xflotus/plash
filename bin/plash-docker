#!/usr/bin/env python3
#
# usage: plash-docker <DOCKER_ARGS>

from plashlib.utils import handle_help_flag
from os import execlp, environ
import sys

handle_help_flag()

socket = environ.get(
    'PLASH_DOCKER_SOCKET',
    '/tmp/docker.sock')

execlp(
    'plash-run',
    'plash-run',
    '-A',
    'docker',
    '--',
    '--root',
    'env',
    'DOCKER_HOST=unix://{}'.format(socket),
    'docker',
    *sys.argv[1:])
