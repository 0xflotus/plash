#!/usr/bin/env python3
#
# usage: plash-dockerd <DOCKER_ARGS>

from plashlib.utils import handle_help_flag
from os import execlp

handle_help_flag()

execlp(
    'plash-run',
    'plash-run',
    '-A',
    'docker',
    '--',
    '--dont-deescalate',
    'env',
    'DOCKER_RAMDISK=1',
    'dockerd',
    '-H',
    'unix:///tmp/docker.sock')
