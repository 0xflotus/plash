#!/bin/sh

# usage: plash purge
# Prompts to delete all build data.

read -r -p "Delete all build data? [y/N] " response
case "$response" in
    [yY][eE][sS]|[yY]) 
        # don't delete the dir itself because it could be a mount
        exec rm -rf ${PLASH_DATA:-/var/lib/plash}/*
        ;;
    *)
esac
